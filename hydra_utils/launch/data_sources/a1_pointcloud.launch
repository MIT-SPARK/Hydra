<launch>
    <arg name="sim_time_required" default="true"/>
    <param name="use_sim_time" value="$(arg sim_time_required)"/>

    <arg name="use_prerecorded_semantics" default="false"/>
    <arg name="use_semantics" default="true"/>
    <arg name="use_gt_frame" default="false"/>
    <arg name="sensor_frame" default="base_link"/>
    <arg name="parent_frame" default="world"/>

    <arg name="rgb_info_topic" default="/cam_d455/color/camera_info"/>
    <arg name="rgb_topic" default="/cam_d455/color/image_raw"/>
    <arg name="depth_topic" default="/cam_d455/depth/image_rect_raw"/>
    <arg name="depth_info_topic" default="/cam_d455/depth/camera_info"/>
    <arg name="pointcloud_topic" default="/semantic_pointcloud"/>

    <arg name="enable_rectification" default="true"/>

    <include file="$(find hydra_utils)/launch/gt_pose/robot_gt_pose.launch" pass_all_args="true"
             if="$(arg use_gt_frame)"/>

    <include file="$(find hydra_utils)/launch/includes/rgbd_to_pointcloud.xml" pass_all_args="true"
        unless="$(arg use_semantics)"/>

    <include file="$(find semantic_recolor)/launch/semantic_recolor_pointcloud.launch" pass_all_args="true"
             if="$(arg use_semantics)">
        <arg name="verbose" value="false"/>
        <arg name="rgb_image_transport" value="compressed" unless="$(arg use_prerecorded_semantics)"/>
    </include>
</launch>
